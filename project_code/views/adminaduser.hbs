<div class="main">
    <div class="">
        <div class="jumbotron">
            <h1>Add Patient</h1>
            <p>Add an patient to the system</p>
            <form action="/admin/adminaddpat" method="POST">
                <div class="form-group">
                    <label for="s1">Patient ID</label>
                    <input type="number" class="form-control" name="par1" id="s1" pattern="[0-9]{6,11}" required>
                </div>

                <div class="form-group">
                    <label for="s2">First Name</label>
                    <input type="text" class="form-control" name="par2" pattern="[A-Za-z]{1,100}" id="s2" required>
                </div>

                <div class="form-group">
                    <label for="s3">Last Name</label>
                    <input type="text" class="form-control" name="par3" pattern="[A-Za-z]{1,100}" id="s3" required>
                </div>

                <div class="form-group">
                    <label for="s4">Age</label>
                    <input type="number" class="form-control" name="par4" min="1" max="99" id="s4" required>
                </div>

                <div class="form-group">
                    <label for="s5">Gender</label>
                    <select class="form-control" id="s5" name="par5">
                        <option>M</option>
                        <option>F</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="s6">Phone Number</label>
                    <input class="form-control" type="tel" name="par6" pattern="[0-9]{10}" id="s6" required>
                </div>

                <div class="form-group">
                    <label for="s7">Username</label>
                    <input type="text" class="form-control" name="par7" pattern="[A-Za-z]{1,50}" id="s7" required>
                </div>

                <div class="form-group">
                    <label for="s8">Password</label>
                    <input type="password" class="form-control" name="par8" id="s8" required>
                </div>

                <div class="form-group">
                    <label for="s9">Blood Group</label>
                    <select class="form-control" id="s9" name="par9">
                        <option>O+ve</option>
                        <option>O-ve</option>
                        <option>A+ve</option>
                        <option>A-ve</option>
                        <option>B+ve</option>
                        <option>B-ve</option>
                        <option>AB+ve</option>
                        <option>AB-ve</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="s10">Address</label>
                    <input type="text" class="form-control" name="par10" id="s10" required>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
        <div class="jumbotron">
            <h1>Remove Patient</h1>
            <p>Remove a patient from the system</p>
            <form action="/admin/adminremovepatient" method="POST">
                <div class="form-group">
                    <label for="s1">Patient ID to Remove</label>
                    <select class="form-control" id="s1" name="par1">
                        {{#each pd}}
                        <option>{{patient_id}}</option>
                        {{else}}
                        <option>No option</option>
                        {{/each}}
                    </select>
                </div>
                {{#if pd}}
                <button type="submit" class="btn btn-danger">Remove</button>
                {{/if}}
            </form>

        </div>
    </div>
</div>