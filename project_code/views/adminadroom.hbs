<div class="main">
    <div class="">
        <div class="jumbotron">
            <h1>Add Room</h1>
            <p>Add a room to the system</p>
            <form action="/admin/adminaddroom" method="POST">
                <div class="form-group">
                    <label for="s1">Room ID</label>
                    <input type="number" class="form-control" name="par1" id="s1" required>
                </div>

                <div class="form-group">
                    <label for="s2">Room Size</label>
                    <select class="form-control" id="s2" name="par2">
                        <option>small</option>
                        <option>medium</option>
                        <option>large</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="s3">Room Type</label>
                    <input type="text" class="form-control" name="par3" id="s3" required>
                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
        <div class="jumbotron">
            <h1>Remove Room</h1>
            <p>Remove a room from the system</p>
            <form action="/admin/adminremoveroom" method="POST">
                <div class="form-group">
                    <label for="s1">Room ID to Remove</label>
                    <select class="form-control" id="s1" name="par1">
                        {{#each rd}}
                        <option>{{room_id}}</option>
                        {{else}}
                        <option>No option</option>
                        {{/each}}
                    </select>
                </div>
                {{#if rd}}
                <button type="submit" class="btn btn-danger">Remove</button>
                {{/if}}
            </form>

        </div>
    </div>
</div>