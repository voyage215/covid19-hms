<div style="margin-top:100px;" class="mb-4">
    <div class="container">
        <h1 class="text-center"> Your Medical Bills</h1>
        {{#each lab_info}}
        <div class="row">
<div class="col-8 offset-2 mt-4">
        <div class="card">
            <div class="card-header text-center">
                Report ID: {{inc @index}}
            </div>
            <div class="card-body">
                <ul class="list-group">
                                <li class="list-group-item">Publish Date: <strong>{{date_short publish_date}}</strong></li>
                                <li class="list-group-item">COVID Result: <strong>{{covid_test_result}}</strong></li>
                                <li class="list-group-item">Lab Name: <strong>{{lab_name}}</strong></li>
                                <li class="list-group-item">Phone: <strong>+1 {{phone}}</strong></li>
                            </ul> 
            </div>
        </div>
    </div>
</div>
{{else}}
<p> Sorry you have no lab reports</p>
{{/each}}
    </div>
</div>